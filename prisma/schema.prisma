generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CodeSession {
  id        String      @id @default(uuid())
  status    String      @default("ACTIVE")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  executions Execution[]
}

model Execution {
  id            String      @id @default(uuid())
  sessionId     String
  session       CodeSession @relation(fields: [sessionId], references: [id])
  code          String      
  language      String
  status        String      @default("QUEUED")
  stdout        String?
  stderr        String?
  executionTime Int?
  createdAt     DateTime    @default(now())
}